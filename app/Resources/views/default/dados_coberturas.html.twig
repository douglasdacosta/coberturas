<h3>Visualização de coberturas </h3>
<p>
    <button class="btn btn-success btn-block " type="button" data-toggle="collapse" data-target="#multiCollapseExample1" aria-expanded="false" aria-controls="multiCollapseExample1">Pessoa</button>
</p>
<div class="row block-1">
    <div class="col">
        <div class="collapse multi-collapse show" id="multiCollapseExample1">
            <div class="card card-body">
                <form>
                    <div class="form-group">
                        <label for="nome">Nome</label>
                        <select class="form-control input-sm" disabled id="nome" name="nome" >
                            {% for item in pessoas %}
                                <option value="{{ item.id }}" {{ cobertura.pessoa_id == item.id ? 'selected="selected"' : '' }}>{{ item.nome}}</option>
                            {% endfor %}    
                        </select>
                    </div>                    
                </form>
            </div>
        </div>
    </div>
</div>
<p>
    <button class="btn btn-success btn-block" type="button" data-toggle="collapse" data-target="#multiCollapseExample2" aria-expanded="false" aria-controls="multiCollapseExample2">Animal</button>
</p>
<div class="row block-2">
    <div class="col">
        <div class="collapse multi-collapse show" id="multiCollapseExample2">
            <div class="card card-body">
                <form>
                    <div class="form-group">
                        <label for="Animal">Nome</label>
                        <select class="form-control input-sm" disabled id="animal" name="animal" >
                            {% for item in animais %}
                                <option value="{{ item.animal_id }}" {{ cobertura is defined and cobertura.animal_id == item.animal_id ? 'selected="selected"' : '' }}>{{ item.animal_nome}}</option>
                            {% endfor %}   
                        </select>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>
<p>
    <button class="btn btn-success btn-block" type="button" data-toggle="collapse" data-target="#multiCollapseExample3" aria-expanded="false" aria-controls="multiCollapseExample3">Coberturas</button>
</p>
<div class="row block-3">
    <div class="col">
        <div class="collapse multi-collapse show" id="multiCollapseExample3">
            <div class="card card-body">
                {% for item_cobertura in array_coberturas %}
                    <form style="border-bottom: 2px solid #727b84; margin-bottom: 20px">
                        <div class="form-group">
                            <label for="garanhao">Garanhão</label>
                            <input type="garanhao" class="form-control" value="{{ item_cobertura.garanhao_nome is defined  ? item_cobertura.garanhao_nome : '' }}" id="data_cobertura">
                        </div>
                        <div class="form-group">
                            <label for="data_cobertura">Dt cobertura</label>
                            <input type="data_cobertura" class="form-control" value="{{ item_cobertura.cobertura_dataCobertura != null  ? item_cobertura.cobertura_dataCobertura|date('d/m/Y') : '' }}" id="data_cobertura">
                        </div>
                        <div class="form-group">
                            <label for="previsao_parto">Previsão parto</label>
                            <input type="previsao_parto" class="form-control date" value="{{ item_cobertura.cobertura_previsaoParto != null  ? item_cobertura.cobertura_previsaoParto|date('d/m/Y') : '' }}" id="previsao_parto">
                        </div>
                        <div class="form-group">
                            <label for="data_parto">Dt parto</label>
                            <input type="data_parto" class="form-control" value="{{ item_cobertura.cobertura_dataParto != null  ? item_cobertura.cobertura_dataParto|date('d/m/Y') : '' }}" id="data_parto">
                        </div>
                        <div class="form-group">
                            <label for="sexo">Sexo</label>
                            <select class="form-control" id="sexo" name="sexo">
                                <option {{ item_cobertura.cobertura_sexo == null ? "selected" : "" }}></option>
                                <option {{ item_cobertura.cobertura_sexo == 'M' ? "selected" : "" }}>Macho</option>
                                <option {{ item_cobertura.cobertura_sexo == 'F' ? "selected" : "" }}>Fêmea</option>
                            </select>
                        </div>
                        <div class="form-group">
                            <label for="data_obito">Óbito</label>
                            <input type="data_obito" class="form-control" value="{{ item_cobertura.cobertura_obito != null  ? item_cobertura.cobertura_obito|date('d/m/Y') : '' }}" id="data_obito">
                        </div>
                        <a class="btn btn-info my-2 my-sm-0 ml-1 float-right" href="{{ '/coberturas/web/coberturas/formAlterar?pessoa=' ~ cobertura.pessoa_id ~ '&animal=' ~ item_cobertura.animal_id ~ '&cobertura=' ~ item_cobertura.cobertura_id  ~ '&formType='}}">Alterar</a>
                    </form>                
                {% endfor %}
            </div>
        </div>
    </div>
</div>
